<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:id="@+id/txt_cal_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_5dp"
        android:text="@string/str_saturday"
        android:textSize="@dimen/padding_10dp"
        android:textColor="@color/colorGrayDark" />
    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_3dp"
        android:text="7"
        android:textSize="@dimen/padding_10dp"
        android:textColor="@color/colorBlack" />
    <View
        android:id="@+id/view_circle"
        android:background="@drawable/circle"
        android:layout_width="@dimen/padding_5dp"
        android:layout_height="@dimen/padding_5dp" />
</LinearLayout>